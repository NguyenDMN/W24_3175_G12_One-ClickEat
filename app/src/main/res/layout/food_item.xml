<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- ImageView for food item icon -->
    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/jolibee1" />  <!-- Placeholder image, replace with actual food item icon -->

    <!-- LinearLayout to hold text details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- TextView for food item name -->
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Item Name"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- TextView for food item description -->
        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Item Description"
            android:textSize="14sp"/>

        <!-- TextView for food item price -->
        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $0.00"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
